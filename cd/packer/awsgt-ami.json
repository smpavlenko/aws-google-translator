{
  "variables": {
    "region": "eu-west-1",
    "base_ami": "ubuntu-xenial-16.04-amd64-server-*",
    "app_version": "@project.version@",
    "tag_name": "AWSGT"
  },
  "builders": [
    {
      "name": "awsgt-ami",
      "type": "amazon-ebs",
      "ami_name": "AWSGT_{{user `ami_version`| clean_ami_name}}",
      "region": "{{user `region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{user `base_ami`}}",
          "root-device-type": "ebs"
        },
        "most_recent": true
      },
      "ami_regions": [
        "{{user `region`}}"
      ],
      "run_tags": {
        "Name": "{{user `tag_name`}}"
        "Version": "{{user `app_version`}}"
      },
      "tags": {
        "Name": "{{user `tag_name`}}",
        "Version": "{{user `app_version`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "shell/bootstrap.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/playbook.yml",
      "inventory_file": "ansible/inventory",
      "role_paths": [
        "ansible/roles/java8",
        "ansible/roles/awsgt"
      ]
    }
  ]
}